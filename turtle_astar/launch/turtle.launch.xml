<launch>

    <arg name="world" default="$(find-pkg-share turtle_astar)/turtle.world.sdf" description="World sdf file path." />
    <arg name="view_only" default="false" description="True to view Rviz, default as false" />

    <include file="$(find-pkg-share turtle_astar)/turtle_rviz.launch.xml">
        <arg name="view_only" value="$(var view_only)"/>
    </include>

    <node pkg="ros_gz_sim" exec="create" name="create_turtle" output="screen">
        <param name="topic" value="/robot_description"/>
        <param name="x" value="-7.0"/>
        <param name="y" value="5.0"/>
        <param name="z" value="1.0"/>
        <param name="R" value="0.0"/>
        <param name="P" value="0.0"/>
        <param name="Y" value="1.57079"/>
    </node>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r $(var world)"/>
    </include>

</launch>